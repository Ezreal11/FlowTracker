<idea-plugin>
    <version>0.0.1</version>
    <id>com.zzw.action-tracker-control</id>
    <name>Action Tracker Control</name>
    <vendor email="zwzheng@smail.nju.edu.cn" url="https://github.com/jzyhywxz">南京大学计算机科学与技术系</vendor>

    <description><![CDATA[
    This plugin is developed to automatically control the <em>Action Tracker</em> plugin.
    ]]></description>

    <!--
    <idea-version since-build="182.0"/>
    -->
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>com.zzw.EntryPoint</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceImplementation="org.jetbrains.actionTracker.ActionTrackingService"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group>
            <action class="org.jetbrains.actionTracker.StartStopTrackingAction" id="action.tracker.StartStopTracking" text="Start/Stop Tracking"/>
            <action class="org.jetbrains.actionTracker.NextTaskAction" id="action.tracker.NextTask" text="Start Next Task">
                <keyboard-shortcut first-keystroke="ctrl shift p" keymap="$default"/>
            </action>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>